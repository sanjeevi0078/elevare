# ==========================================
# ELEVARE - ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==========================================
# ENVIRONMENT & APP SETTINGS
# ==========================================
ENVIRONMENT=development
APP_NAME=Elevare
APP_VERSION=1.0.0
DEBUG=true

# ==========================================
# SERVER CONFIGURATION
# ==========================================
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL (Docker/Production)
POSTGRES_USER=elevare
POSTGRES_PASSWORD=elevare_secret_change_me
POSTGRES_DB=elevare_db
DATABASE_URL=postgresql+asyncpg://elevare:elevare_secret_change_me@db:5432/elevare_db

# SQLite fallback (local development without Docker)
# Set USE_SQLITE=true to use SQLite instead of PostgreSQL
USE_SQLITE=false
# DATABASE_URL=sqlite:///./elevare.db

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your_redis_password_here

# ==========================================
# SECURITY & AUTHENTICATION
# ==========================================
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# CORS SETTINGS
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-domain.com
CORS_CREDENTIALS=true

# ==========================================
# API KEYS & EXTERNAL SERVICES
# ==========================================
# Required for AI features
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Optional: GitHub API for real cofounder matching
# GITHUB_API_TOKEN=your_github_token_here

# Optional: AngelList/Wellfound for startup profiles
# ANGELLIST_API_KEY=your_angellist_key_here

# ==========================================
# EMAIL SERVICE (Optional)
# ==========================================
EMAIL_ENABLED=false
EMAIL_FROM=noreply@elevare.com
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Or use SendGrid:
# SENDGRID_API_KEY=your_sendgrid_key_here

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==========================================
# CACHING
# ==========================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=logs/elevare.log

# ==========================================
# MONITORING (Production)
# ==========================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

METRICS_ENABLED=true
METRICS_PORT=9090

# ==========================================
# FILE STORAGE
# ==========================================
UPLOAD_MAX_SIZE_MB=10
STORAGE_TYPE=local
# For S3 storage:
# STORAGE_TYPE=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_COFOUNDER_MATCHING=true
FEATURE_AI_MENTOR=true
FEATURE_COLLABORATION=true
FEATURE_DIMENSIONAL_ANALYSIS=true
FEATURE_REAL_GITHUB_API=false
FEATURE_EMAIL_NOTIFICATIONS=false

# ==========================================
# BUSINESS LOGIC SETTINGS
# ==========================================
MIN_IDEA_LENGTH=20
MAX_IDEA_LENGTH=5000
COFOUNDER_MATCH_TOP_K=10
COFOUNDER_MIN_MATCH_SCORE=0.4
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
